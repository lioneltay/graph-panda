{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "lib": ["esnext.asynciterable", "es5"]
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
