{
  "name": "graph-panda",
  "version": "0.0.1",
  "description": "Collection of tools for working with graphql",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lioneltay/graphql-tekk"
  },
  "scripts": {
    "compile": "tsc || true",
    "compileAndRun": "npm run compile && node dist/index.js",
    "devslow": "nodemon --watch src/ --exec \"npm run compileAndRun\"",
    "compileWatch": "tsc --watch",
    "dev":
      "npm run compile && concurrently \"tsc --watch\" \"nodemon dist/index.js --watch dist/\"",
    "test": "jest --watch"
  },
  "keywords": [
    "graphql",
    "tekk",
    "tools",
    "helpers",
    "schema",
    "reader",
    "tech",
    "graphl-tekk",
    "graphql-tech"
  ],
  "author": {
    "name": "Lionel Tay",
    "email": "lionel.tay@outlook.com"
  },
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "src"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "dependencies": {
    "graphql": "^0.13.1",
    "graphql-tools": "^2.21.0",
    "knex": "^0.14.4",
    "ramda": "^0.25.0",
    "sql-formatter": "^2.2.0"
  },
  "devDependencies": {
    "@types/graphql": "^0.12.5",
    "@types/jest": "^22.2.0",
    "@types/knex": "^0.14.9",
    "@types/ramda": "^0.25.20",
    "concurrently": "^3.5.1",
    "jest": "^22.4.2",
    "nodemon": "^1.17.2",
    "source-map-support": "^0.5.4",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
